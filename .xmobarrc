Config { font = "-*-terminus-*-r-*-*-12-*-*-*-*-*-*-*"
       , bgColor = "grey20"
       , fgColor = "bisque4"
       , position = TopW L 93
       , lowerOnStart = True
       , hideOnStart = False
       , allDesktops = True
       , borderColor = "bisque3"
       , border = NoBorder -- BottomBM 1
       , commands = [ Run Weather "ESGP" ["-t"," <tempC>°C","-L","0","-H","15","--normal","#547D5D","--high","coral3","--low","cadetblue3"] 36000
                    , Run Cpu ["-t","Cpu <total>%","-L","3","-H","50","--normal","#547D5D","--high","coral3"] 10
                    , Run Battery        [ "--template" , "Batt: <acstatus>"
                             , "--Low"      , "10"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "darkorange"
                             , "--normal"   , "bisque4"
                             , "--high"     , "#547D5D"

                             , "--" -- battery specific options
                                       -- status location
                                       , "-f"   , "AC0/online"
                                       -- discharging status
                                       , "-o"	, "<left>% (<timeleft>)"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#547D5D>AC</fc> (<left>%)"
                                       -- charged status
                                       , "-i"	, "<fc=#547D5D>AC</fc> (max)"
                             ] 50
                    , Run Memory ["-t","Mem <usedratio>%"] 10
                    , Run Date "%a %_d %b %H:%M" "date" 10
                    , Run StdinReader
                    , Run Kbd [("se", "SE"), ("us", "US")]
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{<fc=bisque3>|</fc> %battery% · %cpu% · %memory% · <fc=bisque3>%date%</fc> · %ESGP% · %kbd% |"
       }
